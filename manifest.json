{
    "manifest_version": 2,
    "name": "Allergen Checker",
    "version": "1.0",
    "background": { "scripts": ["background.js"], "persistent": false },
    "permissions": ["activeTab", "storage"],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"]
      }
    ]
  }
  
  
  